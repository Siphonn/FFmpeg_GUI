<Window x:Class="FFmpeg_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFmpeg_GUI"
        Background="#FF1E1E1E"
        x:Name="CompilerMainWindow"
        Title="Video Compiler" 
        Height="500" Width="350"
        WindowStyle ="None"
        AllowsTransparency="True"
        ResizeMode="CanMinimize">

    <StackPanel>
        
    <DockPanel x:Name="RootWindow" Height="30" VerticalAlignment="Top">
        <Border Padding="5" Background="#FF0093B7">
            <DockPanel x:Name="TitleBar" DockPanel.Dock="Top">
                <Button x:Name="CloseButton" Content="X" Width="30" FontWeight="Bold"
                    Click="CloseButton_Click"                 
                    DockPanel.Dock="Right" />
                <Button x:Name="MinButton" Content="____" Width="30" FontWeight="Bold"
                    Click="MinButton_Click"
                    DockPanel.Dock="Right" />
                <Image Width="20" Height="20" Source="D88_Logo_128x128.png"></Image>
                <TextBlock Name="_windowName" Text="Video Compiler" FontSize="14" FontStyle="Normal" FontWeight="DemiBold" Foreground="Black" Padding="5,0,0,0"/>
            </DockPanel>
        </Border>
    </DockPanel>

        <ComboBox Name="modeSelection" Height="25" Width="100" Margin="0,10,0,0" FontStyle="Normal" BorderBrush="DarkGray" Foreground="Black" SelectedIndex="0" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" SelectionChanged="ModeSelection_SelectionChanged" >
            <ComboBoxItem Content="Simple"></ComboBoxItem>
            <ComboBoxItem Content="Advance"></ComboBoxItem>
        </ComboBox>

        <Frame x:Name="frame" Content="Frame" NavigationUIVisibility="Hidden" Margin="0,10,0,0" Height="425"/>
        
    </StackPanel>



